<main>
    <div class = "container px-5 px-sm-0">
        <div class ="row">


         <%= render 'list', user: @user, book: @book %>



            <div class ="col-md-8 offset-md-1">
                <h2>Users</h2>
                <table class="table table-hover table-inverse">
                    <thead>
                        <tr>
                            <th>image</th>
                            <th>name</th>
                            <th></th>
                            <th colspan="3"></th>
                        </tr>
                    </thead>
                    <tbody>
                           <% @books.each do |book| %>
                            <tr>
                            <td>
                                <%= image_tag book.user.get_profile_image(100,100)%>

                            </td>
                            <td><%= book.user.name %></td>
                            <td><% if current_user.following?(book.user) %>
                              <%= link_to "フォロー外す", user_relationships_path(book.user.id), method: :delete %>
                          <% else %>
                            <%= link_to "フォローする", user_relationships_path(book.user.id), method: :post %>
                            <% end %></td>
                            <td><%= link_to "Show", user_path(book.user) %></td>
                            </tr>
                           <% end %>
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</main>