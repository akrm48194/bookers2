<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">



    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="d-flex flex-column vh-100">
     <header>
       <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
          <div class="container">
             <a class="navbar-brand p-3" href="/"><span>Bookers</span></a>
             <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
    <% if user_signed_in? %>
      <li class ="nav-link">
          <i class="fas fa-home"></i>
        <%= link_to "Home", user_path(current_user),  class: "text-light" %>
      </li>

      <li class ="nav-link">
         <i class="fas fa-users"></i>
        <%= link_to "Users", users_path, class: "text-light" %>

      </li>

      <li class ="nav-link">

        <i class="fas fa-book-open"></i>
        <%= link_to "Books", books_path, class: "text-light" %>

      </li>

      <li class = "nav-link ">
        <i class="fas fa-sign-out-alt"></i>
        <%= link_to "logout", destroy_user_session_path, class: "text-light" , method: :delete %>

      </li>
    <% else %>
    <li class = "nav-link">
        <i class="fas fa-home"></i>
      <%= link_to "Home", root_path, class: "text-light" %>



    </li>
      <li class = "nav-link">
       <%= link_to  about_path, class: "text-light" do %>
          <i class="fas fa-link"></i>
          About
        <% end %>
      </li>

      <li class ="nav-link ">
        <%= link_to  new_user_registration_path, class: "text-light" do %>
        <i class="fas fa-user-plus"></i>
        sign up
        <% end %>
      </li>

      <li class ="nav-link ">
        <%= link_to  new_user_session_path, class: "text-light" do %>
        <i class="fas fa-sign-in-alt"></i>
        login
        <% end %>
      </li>
    <% end %>
       </ul>
      </div>
     </div>
    </nav>
  </header>

  <%= flash[:notice] %>

    <%= yield %>

    <footer>
      <div class ="container mt-5">
        <div class="row">
          <div class ="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
